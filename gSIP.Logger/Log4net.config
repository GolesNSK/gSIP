<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
  </configSections>

  <log4net>
    <!-- Аппендер для цветного вывода логов в консоль -->
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="DEBUG" />
        <forecolor value="Cyan" />
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="Green"/>
      </mapping>
      <mapping>
        <level value="WARN"/>
        <foreColor value="Yellow"/>
      </mapping>
      <mapping>
        <level value="ERROR"/>
        <foreColor value="Red"/>
      </mapping>
      <mapping>
        <level value="FATAL"/>
        <foreColor value="White"/>
        <backColor value="Red" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline"/>
      </layout>
    </appender>

    <!-- Аппендер для логгера по умолчанию LOGGER -->
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <file value=".\Logs\log#"/>
      <appendToFile value="false"/>
      <rollingStyle value="Composite"/>
      <datePattern value="yyyy-MM-dd'.log'"/>
      <staticLogFileName value="false"/>
      <maxSizeRollBackups value="20"/>
      <maximumFileSize value="10MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d{HH:mm:ss,fff} %-5p [%t] [%C.%M] - %m%n"/>
      </layout>
    </appender>

    <!-- Аппендер для логгера SIP -->
    <appender name="SIPLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <file value=".\Logs\sip#"/>
      <appendToFile value="false"/>
      <rollingStyle value="Composite"/>
      <datePattern value="yyyy-MM-dd'.log'"/>
      <staticLogFileName value="false"/>
      <maxSizeRollBackups value="20"/>
      <maximumFileSize value="10MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d{HH:mm:ss,fff}: %m%n"/>
      </layout>
    </appender>

    <!-- Логгер по умолчанию, дочерний по отношению к root -->
    <logger name="LOGGER">
      <level value="DEBUG"/>
      <appender-ref ref="LogFileAppender"/>
    </logger>

    <!-- Логгер по умолчанию, дочерний по отношению к root -->
    <logger name="SIP">
      <level value="DEBUG"/>
      <appender-ref ref="SIPLogFileAppender"/>
    </logger>

    <!-- Родительский логгер -->
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
  </log4net>
</configuration>